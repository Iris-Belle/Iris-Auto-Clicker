<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av" 
        x:Class="IAC4.MainWindow"
        Title="IAC4" 
        Height="540" 
        Width="960"
        MinWidth="960" 
        MinHeight="540">
    <Grid 
        ClipToBounds="True">
        <Grid 
            x:Name="LayoutRoot" 
            ClipToBounds="True">
            <!--Main Panel-->

            <Grid 
                x:Name="MainPanel"
                RenderOptions.BitmapScalingMode="NearestNeighbor"
                Visibility="Visible">
                <Grid.Background>
                    <ImageBrush ImageSource="/Assets/IACMainBG.png"/>
                </Grid.Background>
                <Grid.RenderTransform>
                    <TranslateTransform/>
                </Grid.RenderTransform>

                <Button Width="75" Height="75"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                BorderThickness="0"
                Click="ToKlikerPanel"
                Cursor="Hand"
                Padding="1"
                RenderOptions.BitmapScalingMode="NearestNeighbor">
                    <Button.Background>
                        <ImageBrush 
                        ImageSource="/Assets/ArrowRight.png" 
                        Opacity="0.75"/>
                    </Button.Background>
                    <Button.Clip>
                        <EllipseGeometry 
                        Center="37.5,37.5" 
                        RadiusX="37.5" 
                        RadiusY="37.5"/>
                    </Button.Clip>
                </Button>

                <Button 
                Width="75" 
                Height="75"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                BorderThickness="0"
                Click="ToLogPanel"
                Cursor="Hand"
                Padding="1"
                RenderOptions.BitmapScalingMode="NearestNeighbor">
                    <Button.Background>
                        <ImageBrush 
                        ImageSource="/Assets/ArrowLeft.png" 
                        Opacity="0.75"/>
                    </Button.Background>
                    <Button.Clip>
                        <EllipseGeometry 
                        Center="37.5,37.5" 
                        RadiusX="37.5" 
                        RadiusY="37.5"/>
                    </Button.Clip>
                </Button>
                <Label 
                    x:Name="VersionLabel"
                    Content="IAC4 0.0.2" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Height="27" 
                    Width="83" FontFamily="Consolas" FontWeight="Bold" Foreground="White"/>

                <Border 
                    Margin="115,10,0,0" 
                    Width="100" 
                    Height="25" 
                    Background="#e6e5d3" 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" 
                    Opacity="0.75" 
                    CornerRadius="8,8,8,8"/>
                <Border 
                    x:Name="CoinFlipBorder"
                    Margin="10,10,0,0" 
                    Width="100" 
                    Height="50" 
                    Background="#e6e5d3" 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" 
                    Opacity="0.75" 
                    CornerRadius="8,8,8,8" 
                    BorderThickness="1,1,6,6" 
                    BorderBrush="#FF322E31">
                    <Button 
                        Content="Flip" 
                        Click="CoinFlip"
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,0" 
                        VerticalAlignment="Center" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Center" 
                        Width="92" 
                        Height="42" 
                        FontFamily="Consolas" 
                        FontSize="16" 
                        FontWeight="Bold">
                        <Button.Foreground>
                            <SolidColorBrush 
                            Color="Black" 
                            Opacity="1"/>
                        </Button.Foreground>
                        <Button.Background>
                            <SolidColorBrush 
                            Color="Black" 
                            Opacity="0"/>
                        </Button.Background>
                    </Button>

                </Border>

                <Label 
                    x:Name="CoinLabel"
                    Content="..." 
                    HorizontalAlignment="Left" 
                    HorizontalContentAlignment="Center" 
                    Margin="115,8,0,0" 
                    VerticalAlignment="Top" 
                    VerticalContentAlignment="Center" 
                    Height="27" 
                    Width="100" 
                    FontFamily="Consolas" 
                    FontWeight="Bold" 
                    FontSize="16">
                    <Label.Background>
                        <SolidColorBrush 
                            Opacity="0" 
                            Color="Black"/>
                    </Label.Background>
                </Label>
                <Border 
                    x:Name="updatebox" 
                    Visibility="Collapsed"
                    Margin="170,110,170,110" 
                    CornerRadius="8,8,8,8">
                    <Border.Background>
                        <SolidColorBrush Color="#e6e5d3"  Opacity="0.75"/>
                    </Border.Background>
                    <Label 
                        Content="THERES AN UPPDATEEEEEEE!11 WAOWWWW" 
                        FontFamily="Consolas" 
                        FontSize="32"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" 
                        FontStyle="Italic" 
                        FontWeight="Bold"/>
                </Border>

            </Grid>

            <!-- Settings Panel -->

            <Grid 
              x:Name="SettingsPanel"
              RenderOptions.BitmapScalingMode="NearestNeighbor"
              Visibility="Collapsed">
                <Grid.Background>
                    <ImageBrush 
                    ImageSource="/Assets/IACSettingsBG.png"/>
                </Grid.Background>
                <Grid.RenderTransform>
                    <TranslateTransform/>
                </Grid.RenderTransform>

                <Button 
                    Width="75" 
                    Height="75"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    Click="ToLogPanelY"
                    RenderOptions.BitmapScalingMode="NearestNeighbor" 
                    Cursor="Hand">
                    <Button.Background>
                        <ImageBrush 
                            ImageSource="/Assets/ArrowDown.png" 
                            Opacity="0.75"/>
                    </Button.Background>
                    <Button.Clip>
                        <EllipseGeometry 
                            Center="37.5,37.5" 
                            RadiusX="37.5" 
                            RadiusY="37.5"/>
                    </Button.Clip>
                </Button>

                <Border 
                    x:Name="ResetSettingsBorder"
                    Margin="10,0,0,10" 
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom" 
                    CornerRadius="8,8,8,8" 
                    Background="White" 
                    Cursor="Hand" 
                    BorderThickness="1,1,8,8" 
                    BorderBrush="#FF322E31">
                    <Button 
                        Click="ResetSettings"
                        Content="RESET SETTINGS" 
                        FontFamily="Consolas" 
                        FontWeight="Bold" 
                        FontSize="16" 
                        Cursor="Hand" 
                        Width="150" 
                        Height="50" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent" 
                        Foreground="Black" FontStyle="Italic">
                    </Button>
                </Border>

                <Border 
                    x:Name="LoadSettingsBorder"
                    Margin="10,65,0,0" 
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    CornerRadius="8,8,8,8" 
                    Background="White"
                    Cursor="Hand" 
                    BorderThickness="1,1,8,8" 
                    BorderBrush="#FF322E31">
                    <Button 
                        Click="LoadSettingsbtn"
                        Content="LOAD STATE" 
                        FontFamily="Consolas" 
                        FontWeight="Bold" 
                        FontSize="16" 
                        Cursor="Hand" 
                        Width="150" 
                        Height="50" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center" 
                        Background="Transparent" 
                        Foreground="Black" FontStyle="Italic">
                    </Button>
                </Border>

                <Border 
                    x:Name="SaveSettingsBorder"
                    Margin="10,10,0,0" 
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    CornerRadius="8" 
                    Background="White"
                    Cursor="Hand" 
                    BorderThickness="1,1,8,8" 
                    BorderBrush="#FF322E31">
                    <Button
                        Click="SaveSettingsbtn"
                        Content="SAVE STATE"
                        FontFamily="Consolas"
                        FontWeight="Bold"
                        FontSize="16"
                        Cursor="Hand"
                        Height="50"
                        Width="150"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center" 
                        Background="Transparent" 
                        Foreground="Black" FontStyle="Italic"/>
                </Border>

                <Border 
                    x:Name="InstallDriverBorder"
                    Margin="0,10,170,0" 
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    CornerRadius="8" 
                    Background="White"
                    Cursor="Hand" BorderThickness="1,1,8,8" BorderBrush="#FF322E31">
                    <Button
                        Click="InstallDriver"
                        Content="INSTALL DRIVER"
                        FontFamily="Consolas"
                        FontWeight="Bold"
                        FontSize="16"
                        Cursor="Hand"
                        Height="50"
                        Width="150"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent" 
                        Foreground="Black" FontStyle="Italic">
                    </Button>
                </Border>

                <Border 
                    x:Name="UninstallDriverBorder"
                    Margin="0,70,170,0" 
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    CornerRadius="8" 
                    Background="White"
                    Cursor="Hand" BorderThickness="1,1,8,8" BorderBrush="#FF322E31">
                    <Button
                        Click="UninstallDriver"
                        Content="UNINSTALL DRIVER"
                        FontFamily="Consolas"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"
                        Height="50"
                        Width="150"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent" 
                        Foreground="Black" FontStyle="Italic">
                    </Button>
                </Border>

                <Border 
                    x:Name="errborder"
                    Margin="0,70,10,0" 
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    CornerRadius="8" 
                    Background="White"
                    Cursor="Hand">
                    <Label 
                        x:Name="errlabel"
                        Content="..."
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontFamily="Consolas" 
                        FontSize="16" 
                        FontWeight="Bold"/>
                </Border>

                <Border 
                    x:Name="LowLevelInputCheckBorder"
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    CornerRadius="8" 
                    Background="White"
                    Margin="0,10,10,0" BorderThickness="1,1,8,8" BorderBrush="#FF322E31">
                    <Button 
                        Content="LOW LEVEL INPUT" 
                        ToolTip="attemps to send inputs in a lower level maybe bypassing some anti auto clickers?"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Height="41" 
                        Width="142" 
                        Cursor="Hand"
                        Click="ToggleLowLevelInput" 
                        FontFamily="Consolas" 
                        FontSize="16" 
                        FontWeight="Bold"
                        Background="Transparent" 
                        Foreground="Black" FontStyle="Italic">
                    </Button>

                </Border>

                <Border 
                    x:Name="AllowUpdateCheckingCheckBorder"
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    CornerRadius="8" 
                    Background="White" 
                    Margin="10,120,0,0" 
                    BorderThickness="1,1,8,8" 
                    BorderBrush="#FF322E31">
                    <Button 
                        Content="ALLOW UPDATE CHECKING" 
                        ToolTip="Makes the app check for updates on github when you start the app"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Height="49" 
                        Width="142" 
                        Cursor="Hand"
                        Click="ToggleUpdateChecking" 
                        FontFamily="Consolas" 
                        FontWeight="Bold" 
                        FontSize="11" 
                        FontStyle="Italic"
                        Background="Transparent" 
                        Foreground="Black">
                    </Button>

                </Border>

                <Border 
                    x:Name="UseCustomTitlesCheckBorder"
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    CornerRadius="8" 
                    Background="White" 
                    Margin="10,175,0,0" 
                    BorderThickness="1,1,8,8" 
                    BorderBrush="#FF322E31">

                    <Button 
                        Content="USE CUSTOM TITLES" 
                        ToolTip="uses a random line from the public google doc as the title on the window"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Height="42" 
                        Width="141" 
                        Cursor="Hand"
                        Click="ToggleCustomTitles" 
                        FontFamily="Consolas" 
                        FontWeight="Bold"
                        Background="Transparent" 
                        Foreground="Black" 
                        FontStyle="Italic" 
                        FontSize="14">
                    </Button>

                </Border>

                <Border 
                    x:Name="GoToRepoBorder"
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    CornerRadius="8" 
                    Background="White" 
                    BorderThickness="1,1,8,8" 
                    BorderBrush="#FF322E31" Margin="0,0,10,10">
                    <Button 
                        Content="GITHUB" 
                        ToolTip="Opens the github repo"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Height="42" 
                        Width="141" 
                        Cursor="Hand"
                        Click="GoToRepo" 
                        FontFamily="Consolas" 
                        FontWeight="Bold"
                        Background="Transparent" 
                        Foreground="Black" 
                        FontStyle="Italic" 
                        FontSize="16">
                    </Button>

                </Border>
                
                <Border 
                    x:Name="GoToGoogleDocBorder"
                    Opacity="0.75" 
                    Width="150" 
                    Height="50" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    CornerRadius="8" 
                    Background="White" 
                    BorderThickness="1,1,8,8" 
                    BorderBrush="#FF322E31" Margin="0,0,10,65">

                    <Button 
                        Content="GOOGLE DOC" 
                        ToolTip="Opens the public google doc where titles are stored"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Height="42" 
                        Width="141" 
                        Cursor="Hand"
                        Click="GoToGoogleDoc" 
                        FontFamily="Consolas" 
                        FontWeight="Bold"
                        Background="Transparent" 
                        Foreground="Black" 
                        FontStyle="Italic" 
                        FontSize="16">
                    </Button>

                </Border>
                
                <Button 
                    x:Name="checkdriver"
                    Content="" 
                    ToolTip="Click to check if driver is installed"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Height="50" 
                    Width="150" 
                    Cursor="Hand"
                    Click="CheckDriver" 
                    FontFamily="Consolas" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Margin="0,70,10,0"
                    Background="Transparent" 
                    Foreground="Black">
                </Button>






            </Grid>

            <!-- Kliker Panel -->

            <Grid 
                  x:Name="KlikerPanel"
                  RenderOptions.BitmapScalingMode="NearestNeighbor"
                  Visibility="Collapsed">
                <Grid.Background>
                    <ImageBrush ImageSource="/Assets/IACKlikerBG.png"/>
                </Grid.Background>
                <Grid.RenderTransform>
                    <TranslateTransform/>
                </Grid.RenderTransform>

                <Button 
                    Width="75" 
                    Height="75"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    Click="ToMainPanel"
                    Cursor="Hand"
                    RenderOptions.BitmapScalingMode="NearestNeighbor">
                    <Button.Background>
                        <ImageBrush 
                            ImageSource="/Assets/ArrowLeft.png" 
                            Opacity="0.75"/>
                    </Button.Background>
                    <Button.Clip>
                        <EllipseGeometry 
                            Center="37.5,37.5" 
                            RadiusX="37.5" 
                            RadiusY="37.5"/>
                    </Button.Clip>
                </Button>

                <Border 
                    Background="#e6e5d3" 
                    Margin="75,45,15,10" 
                    CornerRadius="8" 
                    Opacity="0.85"
                    BorderBrush="#FFC6C3AB" 
                    BorderThickness="4,4,4,4"/>
                <Grid 
                    Margin="75,85,15,10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer 
                            Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto" 
                            Margin="5">
                        <StackPanel 
                                x:Name="ProfilesPanel" 
                                Orientation="Vertical">
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <Border
                    x:Name="ClearAllBorder"
                    Width="100" 
                    Height="35"
                    Cursor="Hand"
                    Margin="82,52,0,0" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    CornerRadius="6,6,6,6" 
                    BorderThickness="1,1,5,5" 
                    BorderBrush="#FF322E31" 
                    Background="#FFE5E4D2">
                    <Button 
                        x:Name="ClearAllProfileButton"
                        Content="CLEAR ALL"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Width="94" 
                        Height="29"
                        Click="ClearAllProfiles"
                        Cursor="Hand" 
                        HorizontalAlignment="Center"
                        ToolTip="Clear all profiles"
                        VerticalAlignment="Center" 
                        FontWeight="Bold" 
                        FontStyle="Italic" 
                        FontFamily="Consolas" 
                        FontSize="16">
                        <Button.Background>
                            <SolidColorBrush 
                            Color="White" 
                            Opacity="0"/>
                        </Button.Background>
                    </Button>
                </Border>

                <Label 
                    Target="{Binding ElementName=ProfileNameTextBox}" 
                    VerticalAlignment="Top"
                    Foreground="Black"
                    Content="NAME:" 
                    FontFamily="Consolas" 
                    FontWeight="Bold" 
                    Width="55" 
                    Height="25" 
                    HorizontalAlignment="Right" 
                    FontStyle="Italic" 
                    FontSize="16" Margin="0,55,475,0"/>



                <Border 
                    BorderBrush="#FF322E31" 
                    Background="#FFE5E4D2"
                    BorderThickness="0,2,0,2" 
                    CornerRadius="6,6,6,6" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Width="250" 
                    Height="35" 
                    Margin="0,52,230,0">
                    <TextBox
                        x:Name="ProfileNameTextBox2"
                        Width="250"
                        Height="31"
                        VerticalAlignment="Center"
                        TextChanged="ProfileNameTextBox_TextChanged" 
                        BorderBrush="{x:Null}" 
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" 
                        Foreground="Black" 
                        HorizontalAlignment="Center" 
                        Background="Transparent" SelectionBrush="#FFFFD62F" SelectionTextBrush="#FF322E31"/>
                </Border>

                <Border 
                    x:Name="DeleteProfileBorder"
                    Width="100" 
                    Height="35"
                    Cursor="Hand"
                    Margin="0,52,22,0" 
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Right" 
                    CornerRadius="6,6,6,6" 
                    BorderBrush="#FF322E31" 
                    Background="#FFE5E4D2" 
                    BorderThickness="1,1,5,5">
                    <Button 
                        x:Name="DeleteProfileButton"
                        Content="DELETE"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Width="94" 
                        Height="29"
                        Click="DeleteProfile"
                        Cursor="Hand" 
                        VerticalAlignment="Center" 
                        ToolTip="Delete profile with matching name (use the textbox to the left)"
                        HorizontalAlignment="Center" 
                        FontFamily="Consolas" 
                        FontWeight="Bold" 
                        FontStyle="Italic" 
                        FontSize="16">
                        <Button.Background>
                            <SolidColorBrush 
                            Color="White" 
                            Opacity="0"/>
                        </Button.Background>
                    </Button>
                </Border>

                <Border 
                    x:Name="CreateProfileBorder"
                    Width="100" 
                    Height="35"
                    Cursor="Hand"
                    ToolTip="Add a new profile" 
                    Margin="0,52,125,0" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    CornerRadius="6,6,6,6" 
                    BorderThickness="1,1,5,5"
                    BorderBrush="#FF322E31" 
                    Background="#FFE5E4D2">
                    <Button 
                        x:Name="AddProfileButton"
                        Content="ADD"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Width="94" 
                        Height="29"
                        Click="AddProfile"
                        Cursor="Hand"
                        ToolTip="Add a new profile" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        FontFamily="Consolas" 
                        FontWeight="Bold" 
                        FontStyle="Italic" 
                        FontSize="16">
                        <Button.Background>
                            <SolidColorBrush 
                            Color="White" 
                            Opacity="0"/>
                        </Button.Background>
                    </Button>
                </Border>

            </Grid>

            <!-- Log Panel -->

            <Grid 
              x:Name="LogPanel"
              RenderOptions.BitmapScalingMode="NearestNeighbor"
              Visibility="Collapsed">
                <Grid.Background>
                    <ImageBrush ImageSource="/Assets/IACLogBG.png"/>
                </Grid.Background>
                <Grid.RenderTransform>
                    <TranslateTransform/>
                </Grid.RenderTransform>

                <Button 
                Width="75" 
                Height="75"
                HorizontalAlignment="Right"
                BorderThickness="0,0,0,0"
                Click="ToMainPanel" 
                Cursor="Hand" 
                Padding="1,1,1,1"
                RenderOptions.BitmapScalingMode="NearestNeighbor" 
                Margin="0,0,0,10" 
                VerticalAlignment="Bottom">
                    <Button.Background>
                        <ImageBrush 
                        ImageSource="/Assets/ArrowRight.png" 
                        Opacity="0.75"/>
                    </Button.Background>
                    <Button.Clip>
                        <EllipseGeometry 
                        Center="37.5,37.5" 
                        RadiusX="37.5" 
                        RadiusY="37.5"/>
                    </Button.Clip>
                </Button>

                <Button 
                HorizontalAlignment="Left" 
                Margin="10,10,0,0" 
                VerticalAlignment="Top" 
                Height="35" 
                Width="35" 
                Click="ToSettingsPanel"
                BorderThickness="0,0,0,0"
                Cursor="Hand" 
                Padding="1,1,1,1"
                RenderOptions.BitmapScalingMode="NearestNeighbor">
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/ButtonSettings.png"/>
                    </Button.Background>
                    <Button.Clip>
                        <EllipseGeometry 
                        Center="17.5,17.5" 
                        RadiusX="17.5" 
                        RadiusY="17.5"/>
                    </Button.Clip>
                </Button>

                <Border 
                    BorderBrush="#e6e5d3" 
                    BorderThickness="5,5,5,5" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="10,50,80,10"
                    ClipToBounds="True" 
                    CornerRadius="8,8,8,8" 
                    Opacity="0.75">
                    <Border
                        x:Name="InnerBorder"
                        CornerRadius="5"
                        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        ClipToBounds="True">
                        <TextBox
                            Name="LogOutputTx"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Auto"
                            TextWrapping="Wrap"
                            IsReadOnly="True"
                            AcceptsReturn="True"
                            FontFamily="Consolas"
                            Background="Transparent"
                            BorderThickness="0"
                            TextChanged="LogOutput" 
                            FontSize="16"/>
                    </Border>
                </Border>
            </Grid>
        </Grid>

        <!-- Profile Panel -->

        <Grid 
                  x:Name="ProfilePanel"
                  RenderOptions.BitmapScalingMode="NearestNeighbor"
                  Visibility="Collapsed">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/IACProfileBG.png"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RenderTransform>
                <TranslateTransform/>
            </Grid.RenderTransform>
            <Border 
                BorderBrush="#FFC8C7B4" 
                Grid.Column="1" 
                Margin="0,0,0,0" 
                Background="#FFE6E5D3" 
                CornerRadius="0,0,0,8" 
                Width="275" 
                Height="315" 
                BorderThickness="4,0,0,4" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"/>

            <Label 
                x:Name="EditingLabel"
                Content="EDITING ..." 
                Margin="0,80,0,0" 
                VerticalAlignment="Top" 
                FontSize="24" 
                FontFamily="Consolas" 
                FontWeight="Bold" 
                Grid.ColumnSpan="2" 
                HorizontalAlignment="Center" 
                Width="250" 
                Height="50" Foreground="#FFE6E5D3"/>

            <Button 
                Width="76" 
                Height="75"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderThickness="0"
                Click="ToKlikerPanelY"
                RenderOptions.BitmapScalingMode="NearestNeighbor" 
                Cursor="Hand" Grid.ColumnSpan="2">
                <Button.Background>
                    <ImageBrush 
                        ImageSource="/Assets/ArrowUp.png" 
                        Opacity="0.75"/>
                </Button.Background>
                <Button.Clip>
                    <EllipseGeometry 
                        Center="37.5,37.5" 
                        RadiusX="37.5" 
                        RadiusY="37.5"/>
                </Button.Clip>
            </Button>

            <Border 
                BorderBrush="Black" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Height="25" 
                Width="250" 
                Margin="0,10,10,0" 
                Background="#FFC8C7B4" 
                CornerRadius="4,4,4,4" 
                Opacity="1" 
                BorderThickness="0,1,0,1"
                Grid.Column="1">
                <TextBox
                    ToolTip="The name of this profile"
                    TextWrapping="Wrap"
